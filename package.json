  "bugs": {
    "url": "https://github.com/inclusion-red/Red-Tracker/issues"
  },
  "homepage": "https://github.com/inclusion-red/Red-Tracker#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
